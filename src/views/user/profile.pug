extends ../base
include ../mixins/video

block content 
  div.profile__data
    if !user.avatarUrl
      span.profile__icon ðŸ˜Š
    else
      if loggedInUser.avatarUrl.includes("githubusercontent")
        img(src=user.avatarUrl, alt="").avatar
      else
        img(src='/' + user.avatarUrl, alt="").avatar

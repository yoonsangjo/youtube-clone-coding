extends base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="Username",name="username" type="text", retuired)
    input(placeholder="Password",name="password" type="password", retuired)
    input(type="submit", value="Login")
    include partials/social-login
  div.auth-switch
    span Don't have an account? 
    a(href="/join") Create one now &rarr;